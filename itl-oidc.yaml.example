# ITL Kubernetes OIDC Configuration File
# This file can be placed in one of the following locations:
# - ~/.itl-oidc.yaml
# - ~/.config/itl-oidc/config.yaml
# - ./itl-oidc.yaml (current directory)

oidc:
  # OIDC issuer URL (can be overridden via CLI or OIDC_ISSUER_URL env var)
  issuer_url: "https://auth.itlusions.com/realms/itlusions"
  
  # OIDC client ID (can be overridden via CLI or OIDC_CLIENT_ID env var)
  client_id: "kubernetes"
  
  # Use device code flow for authentication (can be overridden via CLI or OIDC_USE_DEVICE_CODE env var)
  use_device_code: false
  
  # Path to custom CA certificate (can be overridden via CLI or OIDC_CA_PATH env var)
  # custom_ca_path: "/path/to/ca.crt"
  
  # Path to kubeconfig file (can be overridden via CLI or KUBECONFIG env var)
  # kubeconfig_path: "~/.kube/config"
  
  # Verify authentication after setup using kubectl auth whoami (can be overridden via CLI or OIDC_VERIFY_AUTH env var)
  verify_auth: false